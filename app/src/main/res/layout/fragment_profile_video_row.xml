<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tagteenApplication="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@color/black">

            <ImageView
                android:id="@+id/iconId"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/category_bg"
                android:backgroundTint="@color/black_transparent"/>

            <ImageView
                android:id="@+id/playicon"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:paddingLeft="1dp"
                android:layout_centerInParent="true"
                android:tint="@color/white"
                tagteenApplication:srcCompat="@drawable/ic_play_button_for_campus_live" />

            <TextView
                android:id="@+id/videoducation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:background="@color/grey_300"
                android:text=""
                android:textSize="10sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/relative2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imagePic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/default_userpic" />

                <TextView
                    android:id="@+id/txtname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="15"
                    android:ellipsize="end"
                    android:layout_marginLeft="5dp"
                    android:text="" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/moreoption"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/horizontal_3dots" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/videoDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textRocks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    tagteenApplication:srcCompat="@drawable/ic_bottom_youthube"
                    android:tint="@color/red_A700" />


                <TextView
                    android:id="@+id/textViewCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="14dp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>