<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tagteenApplication="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/dash_board_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tagteenApplication:layout_behavior="@string/appbar_scrolling_view_behavior"/>


<com.google.android.material.tabs.TabLayout
android:id="@+id/tabs_dash_board"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_gravity="top"
tagteenApplication:tabIndicatorColor="@color/white"
tagteenApplication:tabTextColor="@color/white"
tagteenApplication:tabMode="fixed" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>