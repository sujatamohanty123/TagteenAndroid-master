<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tagteenApplication="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout
        android:id="@+id/login_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fullbackground"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/logo_margintop"
            android:src="@drawable/logo_inner_page" />


        <LinearLayout
            android:id="@+id/login_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Reset your Password"
                android:textColor="@color/blue_heading"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Make sure it is minimum of 6 character \n (include mix of letters and number)"
                android:textColor="@color/blue_heading"
                android:textSize="10dp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/user_input_email_code"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textColorHint="@color/blue_heading">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/user_email_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="Enter code"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:minWidth="350dp"
                    android:textColor="@color/blue_heading"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textIsSelectable="false"
                    tagteenApplication:backgroundTint="@color/tint_color" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_password"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textColorHint="@color/blue_heading">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/user_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="Password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:minWidth="350dp"
                    android:textColor="@color/blue_heading"
                    android:textCursorDrawable="@drawable/cursor_color"
                    tagteenApplication:backgroundTint="@color/tint_color" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_confirm_password"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textColorHint="@color/blue_heading">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/user__confirm_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="Confirm Password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:minWidth="350dp"
                    android:textColor="@color/blue_heading"
                    android:textCursorDrawable="@drawable/cursor_color"
                    tagteenApplication:backgroundTint="@color/tint_color" />

            </com.google.android.material.textfield.TextInputLayout>


            <ImageView
                android:id="@+id/imageButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/signup_button" />

        </LinearLayout>
    </LinearLayout>


</ScrollView>