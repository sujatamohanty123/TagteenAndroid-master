<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tagteenApplication="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutTeenFeedRow"
    android:layout_width="100dp"
    android:layout_marginLeft="5dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPostImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tagteenApplication:cardElevation="1dp"
        tagteenApplication:cardCornerRadius="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgPostPlaceholder"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/lblImageCount"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:background="@drawable/rectangle_transparent_black"
                android:gravity="center"
                android:text="1/6"
                android:textColor="@color/white"
                android:textSize="10dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        android:layout_below="@id/cardPostImage">

        <TextView
            android:id="@+id/lblPostTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/lblCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="10sp"
            android:textColor="@color/grey_400"/>

    </LinearLayout>

</RelativeLayout>