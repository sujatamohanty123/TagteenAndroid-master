<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tagteenApplication="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tagteenApplication:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.tagteen.tagteen.HobbySelectionPage">

    <LinearLayout
        android:id="@+id/hobby_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fullbackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hb_logo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/logo_margintop"
            android:src="@drawable/logo_inner_page" />


        <LinearLayout
            android:id="@+id/hobby_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Almost there.."
                android:textColor="@color/blue_900"
                android:textSize="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Please choose your Hobby/ passion/ Interest"
                android:textColor="@color/white"
                android:textSize="10dp" />
            <!--   <in.tagteen.tagteen.MaterialEditTextUtils.StaggeredTextGridView-->
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flexbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                tagteenApplication:alignContent="space_around"
                tagteenApplication:alignItems="flex_start"
                tagteenApplication:dividerDrawable="@drawable/div"
                tagteenApplication:flexWrap="wrap"
                tagteenApplication:showDivider="middle" />

            <ImageView
                android:id="@+id/hobby_imageButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/signup_button" />

        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>


