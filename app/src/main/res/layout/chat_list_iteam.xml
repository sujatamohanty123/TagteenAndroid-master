<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tagteenApplication="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|center_horizontal"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        tagteenApplication:cardCornerRadius="@dimen/android_spaces"
        tagteenApplication:cardElevation="2dp"
        tagteenApplication:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/lest_iteam_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <FrameLayout
                    android:id="@+id/userViewImage_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.makeramen.roundedimageview.RoundedImageView xmlns:tagteenApplication="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/userViewImage"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_above="@+id/time"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        tagteenApplication:riv_border_color="@color/app_blue" />


                    <ImageView
                        android:id="@+id/online_indicator_icon"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_gravity="end|bottom"
                        android:layout_marginBottom="7dp"
                        android:layout_marginRight="7dp"
                        android:src="@drawable/smiley" />

                </FrameLayout>

                <TextView
                    android:id="@+id/list_friend_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@+id/userViewImage_container"
                    android:layout_toRightOf="@+id/userViewImage_container"
                    android:gravity="center"
                    android:lines="1"
                    android:maxLength="10"
                    android:padding="1dp"
                    android:text="Rajdhani"
                    android:textColor="@color/grey_800"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/friends_tagNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/list_friend_name"
                    android:layout_toEndOf="@+id/userViewImage_container"
                    android:layout_toRightOf="@+id/userViewImage_container"
                    android:gravity="center"
                    android:maxLength="6"
                    android:padding="1dp"
                    android:text="RAJ4563"
                    android:textColor="@color/grey_600"
                    android:textSize="10sp" />

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>



