<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apo="http://schemas.android.com/tools"
    xmlns:tagteenApplication="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/cool_rounded_style"
    android:gravity="center">

    <ImageView
        android:id="@+id/imagecool"
        android:layout_width="@dimen/cool_icon_size"
        android:layout_height="@dimen/cool_icon_size"
        android:layout_marginLeft="10dp"
        tagteenApplication:srcCompat="@drawable/svg_cool_emoji"/>

    <ImageView
        android:id="@+id/imagedab"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        tagteenApplication:srcCompat="@drawable/svg_dab_emoji"/>

    <ImageView
        android:id="@+id/imageNurd"
        android:layout_width="@dimen/cool_icon_size"
        android:layout_height="@dimen/cool_icon_size"
        android:layout_marginLeft="15dp"
        android:scaleType="centerCrop"
        tagteenApplication:srcCompat="@drawable/ic_svg_cool_select"/>

    <ImageView
        android:id="@+id/imageSwag"
        android:layout_width="@dimen/cool_icon_size"
        android:layout_height="@dimen/cool_icon_size"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        tagteenApplication:srcCompat="@drawable/svg_swag_emoji" />
</LinearLayout>