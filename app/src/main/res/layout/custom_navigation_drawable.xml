<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tagteenApplication="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:background="@color/gray13"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="#00000000"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="#FFFFFF"
        android:orientation="vertical">

<ImageView
    android:id="@+id/fL_di_cross"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_margin="5dp"
    tagteenApplication:srcCompat="@drawable/ic_cross_black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/fL_di_profile_pic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/placeholder"
                tagteenApplication:riv_corner_radius="100dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fL_di_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/gray50"
                    android:text="Kuldeep Mishra" />

                <TextView
                    android:id="@+id/fL_di_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textColor="@color/gray50"
                    android:text="KM12344" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/gray12" />

        <TextView
            android:id="@+id/fL_di_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gray50"
            android:text="Searech" />

        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/gray12" />

        <TextView
            android:id="@+id/fL_di_new_broadcast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gray50"
            android:text="New Broadcast" />

        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/gray12" />

        <TextView
            android:id="@+id/fL_di_chat_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gray50"
            android:text="Chat Setting" />

        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/gray12" />

        <TextView
            android:id="@+id/fL_di_faq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gray50"
            android:text="FAQ" />

        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/gray12" />

        <TextView
            android:id="@+id/fL_di_send_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gray50"
            android:text="Send a Tag" />
        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/gray12" />
        <TextView
            android:id="@+id/fL_di_add_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gray50"
            android:text="Add A Friend" />

        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/gray12" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gray50"
            android:text="Create New Group" />

        <LinearLayout
            android:id="@+id/fL_di_add_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/fL_di_add_pic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/placeholder"

                    tagteenApplication:riv_corner_radius="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray50"
                    android:text="me" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/fL_di_add_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    tagteenApplication:srcCompat="@drawable/ic_group_add_black_24dp"
                    tagteenApplication:riv_corner_radius="100dp"
                    tagteenApplication:riv_border_color="#FF000000"
                    tagteenApplication:riv_border_width="2dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray50"
                    android:text="Add" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
    </LinearLayout>