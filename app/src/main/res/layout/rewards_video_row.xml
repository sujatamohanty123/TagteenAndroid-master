<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layoutPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgPost"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_video_play"
            android:background="@color/colorPrimary"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/lblPostId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgPost"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/lblLikesCount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:drawableRight="@drawable/ic_bottom_youthube"
            android:drawableTint="@color/red_A700"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_below="@id/layoutPost"
        android:layout_marginLeft="60dp"
        android:background="@color/fbutton_color_silver" />

</RelativeLayout>