<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">
    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:tagteenApplication="http://schemas.android.com/apk/res-auto"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:id="@+id/imageView_selfi"
        android:src="@drawable/cam_dex"
        android:scaleType="fitCenter"
        tagteenApplication:riv_corner_radius="20dp"
        tagteenApplication:riv_border_width="3dip"
        android:layout_gravity="center"
        tagteenApplication:riv_border_color="@color/actionbar_bg"
        tagteenApplication:riv_mutate_background="true"
        tagteenApplication:riv_tile_mode="clamp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="@color/actionbar_bg"
        android:text="reaction"/>

</LinearLayout>