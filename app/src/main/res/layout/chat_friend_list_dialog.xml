<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:id="@+id/name_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image"
                android:gravity="center"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/gray70"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hide_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="5dp">


            <TextView
                android:id="@+id/hide_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image"
                android:text="Hide Friend"
                android:textColor="@color/gray50"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lock_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/lock_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image"
                android:text="Lock Friend"
                android:textColor="@color/gray50"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/delete_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="5dp">


            <TextView
                android:id="@+id/delete_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image"
                android:text="Delete Chat"
                android:textColor="@color/gray50"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mute_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/mute_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image"
                android:text="Mute Notification"
                android:textColor="@color/gray50"
                android:textSize="16dp"  />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/block_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/block_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image"
                android:text="Block"
                android:textColor="@color/gray50"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewProfile_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="5dp">


            <TextView
                android:id="@+id/viewProfile_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image"
                android:text="View Profile"
                android:textColor="@color/gray50"
                android:textSize="16dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>