<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tagteenApplication="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="tagteen talk"
            android:textColor="@color/black"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:id="@+id/toolbar_shadow"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/toolbar_dropshadow" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Hey,"
                android:textColor="@color/full_black"
                android:textStyle="bold"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/campus_color_4"
                android:text="\nWhat do you think of WhatsApp?"/>

            <ImageView
                android:id="@+id/imgIcon1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/poo"/>

            <TextView
                android:id="@+id/lblTapToFind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tap to find out"/>

            <TextView
                android:id="@+id/lblTitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="@color/campus_color_2"
                android:text="We are just kidding LOL.."/>

            <ImageView
                android:id="@+id/imgIcon2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="gone"
                android:layout_marginTop="2dp"
                android:src="@drawable/tears_of_joy"/>

            <TextView
                android:id="@+id/lblTitle3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="@color/campus_color_3"
                android:text="A new kind of messenger is born,"/>

            <ImageView
                android:id="@+id/imgIcon3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="gone"
                android:layout_marginTop="2dp"
                android:src="@drawable/thumbs_up"/>

            <TextView
                android:id="@+id/lblTitle4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="@color/campus_color_6"
                android:text="It's young, fun &amp; made for you "/>

            <ImageView
                android:id="@+id/imgIcon4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="gone"
                android:layout_marginTop="2dp"
                android:src="@drawable/heart_eyes"/>

            <TextView
                android:id="@+id/lblTitle5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="@color/campus_color_8"
                android:text="It's coming to your phone soon..."/>

            <ImageView
                android:id="@+id/imgIcon5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="gone"
                android:layout_marginTop="2dp"
                android:src="@drawable/clapping_hands"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
