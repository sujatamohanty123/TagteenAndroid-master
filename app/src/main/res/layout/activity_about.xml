<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tagteenApplication="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="in.tagteen.tagteen.profile.AboutActivity">

    <RelativeLayout
        android:id="@+id/layouttop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:padding="5dp">

        <ImageView
            android:id="@+id/aboutback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:tint="@color/black"
            tagteenApplication:srcCompat="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/title_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/aboutback"
            android:gravity="center"
            android:text="About"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layouttop"
        android:background="@color/list_divider"
        android:elevation="3dp" />

    <RelativeLayout
        android:id="@+id/relativeabout"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_below="@+id/view1"
        android:background="@color/white"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/logo123"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/logo_inner_page" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo123"
            android:text="Version 1.0.13"
            android:textAlignment="center" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listabout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeabout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:dividerHeight=".3dp" />

</RelativeLayout>
