<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chatreceiver_ab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:paddingRight="2dp"
            android:text="Post to Moments"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold"/>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/post_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/post_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="3dp"
            fab:srcCompat="@drawable/ic_send_new" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/post_button_select"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="3dp"
            fab:srcCompat="@drawable/ic_send_selected" />

        <TextView
            android:visibility="gone"
            android:id="@+id/item_count"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="right|top"
            android:background="@drawable/di_back"
            android:gravity="center"
            android:text=""
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold" />
    </FrameLayout>

