<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tagteenApplication="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp">

    <!--<android.support.v7.widget.CardView-->
        <!--android:id="@+id/lyt_thread"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="center_vertical|center_horizontal"-->
        <!--android:background="@android:color/transparent"-->
        <!--tagteenApplication:cardCornerRadius="5dp"-->
        <!--tagteenApplication:cardElevation="1dp"-->
        <!--tagteenApplication:cardUseCompatPadding="true">-->

        <RelativeLayout
            android:id="@+id/lyt_thread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <ImageView
                android:id="@+id/emoji"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/emoji"
                android:layout_alignBottom="@+id/emoji"
                android:src="@drawable/ic_play_emoji"
                android:paddingBottom="10dp"/>

            <LinearLayout
                android:id="@+id/statusContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emoji"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_xxsmall"
                    android:textColor="@color/material_grey_600" />

                <ImageView
                    android:id="@+id/image_status"
                    android:layout_width="@dimen/image_status"
                    android:layout_height="@dimen/image_status"
                    android:src="@drawable/ic_not_sent"
                    android:layout_marginStart="5dp" />

            </LinearLayout>

        </RelativeLayout>

    <!--</android.support.v7.widget.CardView>-->

</LinearLayout>